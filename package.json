{
  "name": "@ultra/ecp",
  "version": "0.1.0",
  "type": "module",
  "main": "./src/main.ts",
  "bin": {
    "ultra-ecp": "./src/main.ts"
  },
  "exports": {
    ".": "./src/server/index.ts",
    "./protocol": "./src/protocol/index.ts",
    "./protocol/*": "./src/protocol/*.ts",
    "./server": "./src/server/index.ts"
  },
  "scripts": {
    "start": "bun run src/main.ts",
    "typecheck": "tsc --noEmit",
    "test": "bun test",
    "test:protocol": "bun test tests/protocol/",
    "test:server": "bun test tests/server/",
    "test:services": "bun test tests/services/"
  },
  "dependencies": {
    "postgres": "^3.4.8",
    "shiki": "^3.22.0",
    "yaml": "^2.8.2",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5.7.0"
  }
}
